generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL_NON_POOLING")
  relationMode = "prisma"
}

model Link {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(255)
  // short for the shortened URL
  alias     String   @unique @db.VarChar(255)
  // long for the original URL
  url       String   @db.VarChar(2048)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clicks    Click[]
}

model Click {
  id        String   @id @default(uuid())
  linkId    String
  ipAddress String?  @default("") @db.VarChar(255)
  userAgent String?  @default("") @db.VarChar(255)
  referer   String?  @default("") @db.VarChar(255)
  platform  String?  @default("") @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  link      Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId])
}

model Token {
  id      String   @id @default(uuid())
  token   String   @unique
  note    String   @db.VarChar(255)
  created DateTime @default(now())
  updated DateTime @updatedAt
}
