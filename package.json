{
  "name": "bitlie",
  "version": "1.0.0",
  "description": "Bitlie is a simple URL shortener for my personal use.",
  "main": "dist/main.bundle.js",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node .",
    "dev": "nodemon --exec ts-node src/app.ts",
    "deploy": "npm run build && vc --prod",
    "build": "npx tsc && webpack --mode=production --config webpack.config.js && npm run build:cleanup",
    "build:cleanup": "ts-node src/lib/cleanup.ts",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:push": "npx prisma db push",
    "db:reset": "npx prisma format && npm run db:push",
    "db:seed": "tsx prisma/seed.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deri-Kurniawan/bitlie.git"
  },
  "keywords": [
    "link",
    "shortener",
    "link-shortener"
  ],
  "author": "Deri Kurniawan <deri.netuchi@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Deri-Kurniawan/bitlie/issues"
  },
  "homepage": "https://github.com/Deri-Kurniawan/bitlie#readme",
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "chalk": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "babel-loader": "^9.1.3",
    "nodemon": "^3.0.2",
    "prisma": "^5.9.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
